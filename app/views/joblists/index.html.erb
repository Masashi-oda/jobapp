<h1>会社一覧</h1>

<table>
  <thead>
    <tr>
      <th>会社名</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @joblists.each do |joblist| %>
      <tr>
        <td><%= link_to joblist.company, joblist_path(joblist.id) %></td>
        <td><%= link_to 'Edit', edit_joblist_path(joblist) %></td>
        <td><%= link_to 'Destroy', joblist, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Joblist', new_joblist_path %>
